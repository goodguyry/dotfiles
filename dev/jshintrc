{
  // Enforcing options

  "curly"     : true,     // Require {} for every new block or scope
  "eqeqeq"    : true,     // Require triple equals (===) for comparison
  "latedef"   : true,     // Require variables/functions to be defined before being used
  "nonew"     : true,     // Prohibit use of constructors without assignment
  "undef"     : true,     // Require all non-global variables to be declared
  "unused"    : true,     // Prohibit unused variables

  // Relaxing options

  "eqnull"    : true,     // Tolerate use of `== null`

  // Environments
  "browser"   : true,     // Web Browser (window, document, etc)
  "devel"     : true,     // Development/debugging (alert, confirm, etc)
  "node"      : true,     // Node
  "jquery"    : true,     // jQuery
}
