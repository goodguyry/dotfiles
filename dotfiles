source "${HOME}/.dotfiles/lib/mkdirs";

echo "Hello from dotfiles.";

mkdirs "${HOME}/Projects";
mkdirs "${HOME}/.git-templates/hooks";

! [ -z "$(type -P git)" ] && install_git;
