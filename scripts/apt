# apt-get
sudo apt-get -y install curl wget virtualbox;

# Snap apps
snap install handbrake-jz;
snap install vlc;

wget -qO - https://download.sublimetext.com/sublimehq-pub.gpg | sudo apt-key add -
sudo apt-get install apt-transport-https
echo "deb https://download.sublimetext.com/ apt/stable/" | sudo tee /etc/apt/sources.list.d/sublime-text.list
sudo apt-get update
sudo apt-get install sublime-text sublime-merge

VAGRANT_VER="2.2.9"
wget https://releases.hashicorp.com/vagrant/${VAGRANT_VER}/vagrant_${VAGRANT_VER}_x86_64.deb;
sudo dpkg -i vagrant_${VAGRANT_VER}_x86_64.deb;
sudo apt -f install;